{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "declaration": false,
    "isolatedModules": true,
    "rootDir": "tasks",
    "outDir": "./"
  },
  "include": ["tasks"],
  "exclude": ["node_modules"]
}
